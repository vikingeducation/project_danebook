<div class="row-eq-height">
  <div class="col-sm-2" id="photo-container">
    <div class="card bg-inverse" style="margin: 0px">
      <div class="col-sm-12" >
        <% unless profile.nil?%>
          <% if !(profile.photo.nil?) %>
            <%= image_tag profile.photo.avatar.url(:thumb), style: "display:block; margin:auto;" %>
          <% else %>
            <%= image_tag "http://learngroup.org/assets/images/logos/default_male.jpg" %>
          <% end %>
        <% end %>
      </div>
      <div class="card-block text-xs-center">
        <h3 class="card-title" user-id="<%=current_user.id%>"> <%= current_user.username %> </h3>
      </div>
    </div>
  </div>

