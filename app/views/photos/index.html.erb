<main class="container content-container">

  <%= render :partial => "shared/header", :locals => { :user => @user } %>



<!-- Start of main About section -->
  <section id="photos" class="row">

    <div class="row">
      <div class="col-md-12">

        <div class="panel panel-default">


          <div class="panel-heading">
            <div class="row">

              <div class="col-xs-4 col-xs-offset-4 text-center">
                <h1 class="panel-title">Photos</h1>
              </div>

              <div class="col-xs-4 text-right">
                <%= link_to 'Add Photo', new_user_photo_path(@user), class: 'btn btn-primary btn-sm pull-right' %>

              </div>

            </div>

          </div> <!-- end of panel heading -->




          <div class="panel-body">
            <div class="row center-block">

    <!-- photo column -->
              <div class="col-md-12 text-center">

                <div class='row'>
                  <%= render @photos %>
                </div>

              </div> <!-- photo column -->

            </div>
          </div> <!-- end of larger panel body -->



        </div> <!-- end of panel -->

      </div>
    </div>
  </section>




</main> <!-- container -->