<div class="panel-body">

  <div class="row">

    <div class="media">

      <div class="col-md-12">


        <!-- Media list image -->
        <div class="media-left">

          <%= link_to user_path(post.author) do %>
            <%= image_tag 'harry_potter_small.jpg', id: 'user-photo', class: 'media-object', size: '50x50', alt: "Post author's photo" %>
          <% end %>

        </div>  <!-- end of image section -->


        <div class="media-body">


          <!-- Post name and date -->
          <div class="media-heading">

            <%= link_to post.author.profile.full_name, user_path(post.author) %>

            <br>

            <time datetime=<%= post.created_at %> pubdate>
              <small>Posted on <%= post.created_at %></small>
            </time>

          </div>


          <!-- Post text -->
          <p><%= post.body %></p>

        </div> <!-- end of post body -->

      </div>

    </div> <!-- end of Media List -->

  </div>

</div> <!-- end of panel body -->