<nav class="nav navbar-default navbar-fixed-top">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#sign-in-form">
            SIGN-IN
          </button>
          <%= link_to "Danebook", root_url, class: "navbar-brand" %>
        </div>
      </div>
      <%= form_for :session, url: login_path do |f| %>
        <div id="sign-in-form" class="navbar-collapse collapse">
          <div class="nav navbar-nav navbar-right">
            <form role="form" class="form-inline">
              <div class="nav-login form-group col-sm-5">
                <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
                <%= f.label :remember_me %>
                <%= f.check_box :remember_me%>
              </div>
              <div class="nav-login form-group col-sm-5">
                <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
                <%= link_to 'Forgot password?', new_password_reset_path %>
              </div>
              <div class="nav-login form-group col-sm-2">
                <%= f.submit 'Submit', class: 'btn btn-info' %>
              </div>
            </form>
          </div>
        </div>
      <% end %>
      </div>
  </div>
</nav>