<!-HEADER->


<div class="row">
  <header class="col-sm-12">
    <div class='row cover-photo'>
      <%= cover_photo(user) %>
    </div>
    <div class="col-sm-2">
      <div class="profile-photo">
        <%= profile_photo(user, 'thumb') %>
      </div>
    </div>

    <div class="col-sm-3">
      <h3><%= full_name(user) %></h3>
    </div>

    <div class="col-sm-1">
      <% if user != current_user %>
        <%= friend_button(user) %> 
      <% end %>    
    </div>


  </header>  
</div>

<div class="row">
  <div class="toolbar">
    <div class="col-sm-offset-2 col-sm-1 menu-item">
      <b><%= link_to 'Timeline', user_timeline_path(user) %></b>
    </div>
    <div class="col-sm-1 menu-item">
      <b><%= link_to 'About', about_user_path(user) %></b>
    </div>
    <div class="col-sm-1 menu-item">
      <b><%= link_to 'Photos', user_photos_path(user) %></b>
    </div>
    <div class="col-sm-1 menu-item">
      <b><%= link_to 'Friends', user_friends_path(user) %></b>
    </div>
    <% if user == current_user %>
    <div class="col-sm-offset-4 col-sm-2 menu-link">
      <%= link_to "Edit Profile", edit_user_path(user), class: 'pull-right' %>
    </div>
    <% end %>
  </div>
</div>