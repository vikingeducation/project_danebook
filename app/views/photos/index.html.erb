<main>
  <div class="container">

    <%= render partial: 'layouts/cover_and_profile_banner' %>

    <div class="row">
      <%= render 'layouts/navbar' %>
    </div>

    <section class="panel panel-default panel-custom">

      <div class="panel-heading clearfix">
        <% if object_owner? %>
          <%= link_to 'Add Photos', new_user_photo_path(:user_id => current_user.id), class: 'btn btn-primary btn-sm pull-right' %>
        <% end %>
        <h4 class="panel-text text-center">Photos</h4>
      </div>

      <div class="photo-grid">
        <div class="row photo-grid-row">
          <% @photos.each do |photo| %>
            <%= render photo, locals: {:photo => photo} %>
          <% end %>
        </div>
      </div> <!-- end of photo-grid -->

    </section>
  </div>
</main>
