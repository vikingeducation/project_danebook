<%= form_for @user do |user_fields| %>

  <div class = "row">
    <div class = "col-sm-6">
      <%= user_fields.text_field :first_name, class: "form-control", placeholder: "First Name" %>
    </div>
    <div class = "col-sm-6">
      <%= user_fields.text_field :last_name, class: "form-control", placeholder: "Last Name" %>
    </div>
  </div>

  <div class = "row">
    <div class = "col-sm-12">
      <%= user_fields.text_field :email, class: "form-control", placeholder: "Your Email" %>
    </div>
  </div>

  <div class = "row">
    <div class = "col-sm-12">
      <%= user_fields.password_field :password, class: "form-control", placeholder: "Your New Password" %>
    </div>
  </div>

  <div class = "row">
    <div class = "col-sm-12">
      <%= user_fields.password_field :password_confirmation, class: "form-control", placeholder: "Confirm Your Password" %>
    </div>
  </div>

