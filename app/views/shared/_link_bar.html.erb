<div class="row" id="link-bar">
  <ul class="nav nav-tabs">
    <li role="presentation" class="<%= params[:controller] == 'users' ? "active" : "" %>"><%= link_to "Timeline", user_path(user) %></li>
    <li role="presentation" class="<%= params[:controller] == 'profiles' ? "active" : "" %>"><%= link_to "About", user_profile_path(user) %></li>
    <li role="presentation" class="<%= params[:controller] == 'photos' ? "active" : "" %>">
      <%= link_to user_photos_path(user.id) do %>
        Photos<span class="sm-gray"><%= user.photo_count %></span>
      <% end %>
    </li>
    <li role="presentation" class="<%= params[:controller] == 'friendings' ? "active-tab" : "" %>">
      <%= link_to user_friendings_path(user.id) do %>
        Friends<span class="sm-gray"><%= user.friended_users.count %></span>
      <% end %>
    </li>
    <% if signed_in_user? && current_user.id == user.id  %>
      <div class="float-right text-right" id="edit-profile-link">
        <%= link_to "Edit Profile", edit_profile_path(@user.profile.id) %>
      </div><!-- Edit Profile Link -->
    <% end %>
  </ul>
</div>

