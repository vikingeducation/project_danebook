<%= render partial: "./shared/navbar" %>
<main>
  <%= render partial: "./users/info" %>

    <!-- This row will hold the "About" Information. -->
    <!-- The info-section and info-section-topbar css classes are re-used for about_edit and about -->
    <div class="row info-section">
      <div class="col-md-12">
        <!-- This row holds the top bar of the about section -->
        <div class="row info-section-topbar">
          <div class="col-md-2 col-md-offset-5">
            <h2>About</h2>
          </div>
          <div class="col-md-2 col-md-offset-3">
            <% if current_user.id == params[:user_id].to_i%>
              <%= link_to "Edit Your Profile", edit_user_profile_path(current_user, current_user.profile), :class=>"btn btn-primary"  %>
            <% end %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-5">
            <div class="row">
              <div class="col-md-12">
                <div class="center"><h3>Basic Information</h3></div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <b>Birthday:</b> July 31st, 1980
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <b>College:</b> <%= @profile.college_name %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <b>Hometown:</b> <%= @profile.hometown %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <b>Currently Lives:</b> <%= @profile.current_home %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <div class="center"><h3>Contact Information</h3></div>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <b>Email:</b> <%= @profile.user.email %>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <b>Telephone:</b> <%= @profile.telephone %>
              </div>
            </div>
          </div>

          <div class="col-md-7">
            <div class="row">
              <div class="col-md-12">
                <div class="center"><h2>Words to Live By</h2></div>
              </div>
              <div class="col-md-12">
                <p>
                  <%= @profile.words_to_live_by %>
                </p>
              </div>
              <div class="col-md-12">
                <div class="center"><h2>About Me</h2></div>
              </div>
              <div class="col-md-12">
                <p>
                  <%= @profile.about_me %>
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>
</main>