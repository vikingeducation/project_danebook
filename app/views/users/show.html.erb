<main>
    <div class="container">
        <%= render partial: "/shared/profile_bar", locals: { user: @user }%>
        <div class="col-sm-12 user-show">


        <div class="col-sm-5 timeline-col">
            <div class="row wrapper">
                <div class="col-sm-12">
                    <h2>About</h2>
                </div>
                <div class="col-sm-12">
                    <%= @user.profile.about %>
                </div>
            </div>

            <% unless @user.photos.empty? %>
            <div class="row wrapper">
                <div class="col-sm-12">
                    <h3>Photos</h3>
                </div>
                <div class="col-sm-12 text-center">
                    <% @user.photos.each do |photo| %>
                    <div class="small-image">
                        <%= image_tag photo.image.url(:thumb), class: "fit-div" %>
                    </div>
                    <% end %>
                </div>
                <div class="more">
                    <%= link_to "More Photos", user_photos_path(@user) %>
                </div>
            </div>
            <% end %>

            <div class="row wrapper">
                <div class="col-sm-5">
                    <h2>Friends</h2>
                </div>
                <div class="col-sm-12 text-left">
                    <% @user.recent_friends.each do |friend| %>
                    <div class="friends-col">
                        <div id="friend-pic">
                            <%= profile_pic(friend) %>
                        </div>
                        <span><%= link_to friend, friend %></span>
                    </div>
                    <% end %>
                    <div class="more">
                        <%= link_to "More Friends", user_friends_path(@user) %>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6 col-sm-offset-1">
            <% if @user == current_user %>
            <div class="row wrapper">
                <div class="col-sm-12">
                    <h2>Post</h2>
                    <div class="col-sm-10">
                        <%= render partial: "/posts/form", locals: { user: @user } %>
                    </div>
                </div>
            </div>
            <% end %>
            <% unless @posts.empty? %>
            <div class="post-rows">
                <% @posts.each do |p| %>
                <%= render partial: "/posts/post", locals: {post: p} %>
                <% end %>
            </div>
            <% end %>
        </div>
        </div>
    </div>
</main>

</body>
