<section class="row section-container">
  <div class="col-sm-12 section-header">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3 text-center">
        <h4>Post</h4>
      </div>
    </div>
  </div>
  <%= form_tag posts_path, method: "post" do |f| %>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 section-container whiteness text-center">
        <%= text_area_tag("post[description]", post.description, class: "btn-block", placeholder: "Tell the world something...", rows: "3") %>
      </div>
    </div>
    <div class="col-sm-12 section-header post-block">
      <div class="row">
        <div class="col-sm-3 col-sm-offset-8">
          <%= submit_tag("Post", class: "btn btn-primary btn-block") %>
        </div>
      </div>
    </div>
  <% end %>
</section><!-- New Post section -->
