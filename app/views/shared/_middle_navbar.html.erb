<header>

  <div class = "photo-container">
    <%= image_tag "hogwarts_small.jpg", class: "img-responsive", id: "cover-photo" %>
  </div>

  <div id = "pages-nav">
    <div class = "row">

      <div class = "col-md-3">
        <div class = "profile-pic-container">
          <%= image_tag "harry_potter_small.jpg", class: "img-responsive" %>
        </div>
        <h1 class = "profile-name"><%= User.find(params[:user_id]).full_name %></h1>
      </div>

      <div class = "col-xs-7 navigation-container">
        <ul class = "nav navbar-nav nav-pills">
          <li class ="<%= controller.class == StaticPagesController && controller.action_name == "timeline" ? 'active' : '' %>" >
            <%= link_to "Timeline", user_posts_path(params[:user_id]) %>
          </li>

          <li class ="<%= controller.class == StaticPagesController && controller.action_name == "about" ? 'active' : '' %>" >
            <%= link_to "About", user_profile_path(params[:user_id]) %>
          </li>

          <li class ="<%= controller.class == StaticPagesController && controller.action_name == "photos" ? 'active' : '' %>" >
            <%= link_to "Photos <span>(123)</span>".html_safe, photos_path %>
          </li>

          <li class ="<%= controller.class == StaticPagesController && controller.action_name == "friends" ? 'active' : '' %>" >
            <%= link_to "Friends", friendings_path(user_id: params[:user_id]) %>
          </li>
        </ul>
      </div>

      <div class = "col-sm-2 pull-right">
        <ul class = "nav navbar-nav">
          <li>
            <%= edit_or_friend_link %>
          </li>
        </ul>
      </div>
    </div>
  </div>

</header>