  <div class="container">

    <div class="row">
      <section class="col-sm-7">
        <div class="navbar-header">
          <a href="#" class="navbar-brand">Danebook</a>
          <button id='navbar-toggle' class="navbar-toggle collpase btn-primary" data-target='#navbar-form' data-toggle='collapse'>Sign in</button>
        </div> <!-- /navbar header -->
