<%= render "shared/profile_header" %>
<%= render "no_photos" if @photos.empty? %>
<%= render "shared/flash" %>
<div class="upload-photo-form">
  <% if @user == current_user %>
    <%=  form_for [@user, Photo.new] do |f| %>
      <%= f.file_field :picture, class: "btn center-block" %>
      <%= f.submit :Upload!, class: "btn btn-primary center-block" %>
    <% end %>
  <% end %>
</div>
<div class="container">
  <% @photos.each do |photo| %>
    <div class="col-md-4 photo-in-index">
      <%= link_to image_tag(photo.picture.url), user_photo_path(photo.user, photo) %>   
    </div>
  <% end %>
</div>
    
