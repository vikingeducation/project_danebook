<main class="container">
  <div class="row">
    <!-- cover photo -->
    <%= render partial: "shared/cover_and_prof", locals: {user: @user} %>
    <!--set of profile tabs linking to different parts of the page-->
    <%= render "shared/nav_links" %>
  </div>
  <div class="row">
    <!--About page header and edit profile button-->
    <div class="col-md-10 col-md-offset-1" id="header-bar">
      <h2>Photos</h2>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <%= simple_form_for [current_user, current_user.photos.build] do |photo_field| %>
        <%= photo_field.input :image %>
        <%= photo_field.submit %>
      <% end %>
    </div>
  </div>
</main>