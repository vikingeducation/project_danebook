<h1>Sign In</h1>

<%= form_tag session_path do %>

<div class="field">
  <%= label_tag do %>
    Email
    <%= text_field_tag :email %>
  <% end %>
</div> <!-- field -->

<div class="field">
  <%= label_tag do %>
    Password
    <%= password_field_tag :password %>
  <% end %>
</div> <!-- field -->

  <%= submit_tag "Log in" %>
<% end %>


<p>Or <%= link_to "Sign up", new_user_path %></p>
