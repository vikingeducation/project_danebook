<div class="row timeline-post">
	<div class="col-xs-12">
		<!-- Top section of a post -->
		<div class="row">
			<div class="col-xs-12">
				<div class="row">
					<div class="col-sm-1">
						<%= image_tag "harry.jpg" %>
					</div>
					<div class="col-sm-5">
						<div>
						<h4><%= link_to post.author.full_name, post.author %></h4>
						<h6><%= post.posted_on %></h6>
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-xs-12">
						<%= post.body %>
					</div>
				</div>
			</div>
		</div>

		<!-- Bottom section of a post -->
		<% if current_user || post.has_likes?%>
			<div class="row timeline-post-bottombar">
				<div class="col-xs-12 selected">
					<div class="row">
				        <% if current_user %>
							<div class="col-xs-1">
							    <%= display_like_or_unlike_button(post) %>
							</div>
						<% end %>
						<% if current_user && post.author == current_user %>
							<div class="col-xs-1 col-xs-offset-8">
								<%= link_to "Delete", user_post_path(@user, post), method: 'delete' %>
							</div>
						<% end %>
					</div>
					<% if post.has_likes? %>
					<div class="row">
						<div class="col-xs-12">
							<%= post.likes.count %> people like this!
						</div>
					</div>
					<% end %>
				</div>
			</div>
		<% end %>
		<%= render post.comments %>
		<% if current_user %>
			<%= render partial: "posts/comment_form", locals: {post: post} %>
		<% end %>
	</div>
</div>
