<main>
  <div class="container">
    <%= render partial: 'layouts/cover_and_profile_banner' %>

    <div class="row">
      <%= render 'layouts/navbar' %>
    </div> <!-- end of row -->

    <section class="panel panel-default panel-custom">

      <div class="panel-heading clearfix">
        <h4 class="panel-text text-center">Friends</h4>
        <!-- show Add Friend button in case the current user is visiting another persons profile -->
        <% if !object_owner? %>
          <%= render partial: 'new' %>
        <% end %>
      </div>

      <!-- show pending friend requests in case the current user is visiting own friends page -->
      <% if object_owner? %>
      <div class="panel-body">
        <div class="row about-info">
          <% @pending_friends.each do |friendship| %>
            <%= render partial: 'friendships/show_pending',
                        locals: {friendship: friendship} %>
          <% end %>
        </div>
      </div>
      <% end %>

      <div class="panel-body">
        <div class="row about-info">
          <% @accepted_friends.each do |friendship| %>
            <%= render partial: 'friendships/show_accepted',
                        locals: {friendship: friendship} %>
          <% end %>
        </div>
      </div>

    </section>
  </div>
</main>