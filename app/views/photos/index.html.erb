<%= render 'shared/hero' %>

<div id="profile-content">
<section class="info-pane col-md-12">
  <header class="row">
    <div class="col-md-12">
      <%= link_to "Add Photo!", new_photo_path, class: "btn btn-danish pull-right" %>
      <h2><%= "#{@user.name}'s Photos" %></h2>
    </div>
  </header>

  <section class="row">
    <%= render @photos %>
    <div class="col-xs-12 pagination">
      <%= will_paginate @photos, renderer: BootstrapPagination::Rails %>
    </div>
  </section>
</section>
</div>
