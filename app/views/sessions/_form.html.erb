<!-- Login Form -->
<div id="navbar-collapse" class="collapse navbar-collapse">

  <%= form_tag(
        session_path,
        :id => 'navbar-signin',
        :class => 'navbar-form form-inline navbar-right'
      ) do %>
    <div class="form-group">
      <%= text_field_tag(
            :email,
            nil,
            :placeholder => 'Email',
            :class => 'form-control'
          ) %>
    </div>

    <div class="form-group">
      <%= password_field_tag(
            :password,
            nil,
            :placeholder => 'Password',
            :class => 'form-control'
          ) %>
    </div>

    <%= submit_tag('Sign In', :class => 'btn btn-default') %>
  <% end %>

</div>