<%= render :partial => 'shared/nav' %>
<%= render :partial => 'shared/profile_header', :locals => {:user => @user} %>

<!-- Profile Page / About-->
<section id="about" class="row profile-page-container">
  
  <header class="col-xs-12 profile-page-header">
    <h1>
      About
    </h1>
  </header>

  <!-- About Info -->
  <div class="col-xs-12 about-container">
    
    <div class="row">

      <!-- Info Left -->
      <div class="col-sm-5 col-sm-offset-1">

        <!-- Basic Info -->
        <section>
          <header>
            <h2>
              Basic Information
            </h2>
          </header>
          <div class="row">
            <div class="col-xs-12 about-info-container">
              <dl>
                <dt>Birthday:</dt><dd><%= @user.birthday.to_formatted_s(:long) %></dd>
                <dt>College:</dt><dd><%= @user.profile ? @user.profile.college : '-' %></dd>
                <dt>Hometown:</dt><dd><%= @user.profile ? @user.profile.hometown : '-' %></dd>
                <dt>Currently Lives:</dt><dd><%= @user.profile ? @user.profile.currently_lives : '-' %></dd>
              </dl>
            </div>
          </div>
        </section>

        <!-- Contact Info -->
        <section>
          <header>
            <h2>
              Contact Information
            </h2>
          </header>
          <div class="row">
            <div class="col-xs-12 about-info-container">
              <dl>
                <dt>Email:</dt><dd><%= @user.email %></dd>
                <dt>Telephone:</dt><dd><%= @user.profile ? @user.profile.telephone : '-' %></dd>
              </dl>
            </div>
          </div>
        </section>
      </div>

      <!-- Info Right -->
      <div class="col-sm-5">

        <!-- Words to Live By -->
        <article>
          <header>
            <h2>
              Words to Live By
            </h2>
          </header>
          <div class="about-info-container">
            <p>
              <%= @user.profile ? @user.profile.words_to_live_by : '-' %>
            </p>
          </div>
        </article>

        <!-- About Me -->
        <article>
          <header>
            <h2>
              About Me
            </h2>
          </header>
          <div class="about-info-container">
            <p>
              <%= @user.profile ? @user.profile.about_me : '-' %>
            </p>
          </div>
        </article>
      </div>

    </div>

  </div>

</section>
