<% if current_page?(new_user_path) %>
  <% not_homepage = false %>
<% elsif current_page?(root_url) %>
  <% not_homepage = false %>
<% else %>
  <% not_homepage = true %>
<% end %>

<% if not_homepage %>
  <div class="pages">
    <div class="navbar navbar-default">
      <div class="container">
        <div class="row">
          <div class="col-md-2">
            <%= link_to user_path(current_user) do %>
              <%= image_tag("danish_flag.gif", size:"20x20", class: "img-logo img-circle") %>
            <% end %>
            <h3 class="navbar-text">Danebook</h3>
          </div>
          <div class="col-md-7">
            <div class="search-container navbar-block">
              <%= form_tag users_path, :method => 'get' do %>
                <%= text_field_tag "query[firstname]", nil, placeholder: "Search for First name", class: "form-control"  %>
                <%= text_field_tag "query[lastname]", nil, placeholder: "Search for Last name", class: "form-control"  %>
                <%= submit_tag "Search", class: "btn btn-info" %>
              <% end %>
            </div>
          </div>
          <div class="col-md-2">
              <%= link_to "#{current_user.profile.firstname}", user_path(current_user), class: "navbar-brand navbar-right username" %> 
          </div>
          <div class="col-md-1">
              <%= button_to "Logout", logout_path, :method => :delete, class: "btn btn-info navbar-right" %> 
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>