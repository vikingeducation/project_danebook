<%= render partial: "layouts/navlinks", locals: {user: @user} %>

<section class="container content">
  <div class="row title-header">
    <div class="col-xs-4 col-xs-offset-4">
      <p class="title">Search Results</p>
    </div>
  </div>
  <div class="row content-space">

    <% @profiles.each do |friend| %>

    <div class="col-xs-6 friend-col">
      <div class="row friend-row">
        <div class="col-xs-3">
          <%= image_tag 'user_silhouette_generic.gif', class:"friend-profile" %>
        </div>
        <div style="margin-top: 32px" class="col-xs-5">
          <%= link_to friend.name, user_path(friend.user), class: "friend-name" %>
        </div>
        <div class="col-xs-4">
          <%= friend_buttons(friend.user) %>
        </div>
      </div>
    </div>

    <% end %>

  </div>
</div>