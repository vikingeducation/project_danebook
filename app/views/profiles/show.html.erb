<%= render partial: "shared/cover", locals: {user: @profile.user} %>

<div class="container about">
  <div class="row about-bar vcenter">
    <div class="col-sm-2 col-sm-offset-5">
      <h3>About</h3>
    </div>
    <% if @profile.user == current_user %>
      <div class="col-sm-2 col-sm-offset-3">
        <%= link_to "Edit your Profile", edit_profile_path(@profile.id, user_id: @profile.user.id), class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
  <div class = "row">
    <div class = "col-md-5 col-md-offset-1">
      <h3>Basic Information</h3>
      <table class = "table about-table">
        <tr>
          <td>Birthday:</td>
          <td><%= @profile.birthday %></td>
        </tr>
        <tr>
          <td>College:</td>
          <td>some place</td>
        </tr>
        <tr>
          <td>Hometown:</td>
          <td><%= @profile.hometown %></td>
        </tr>
        <tr>
          <td>Currently Lives:</td>
          <td><%= @profile.current_lives %></td>
        </tr>
      </table>

      <h3>Contact Information</h3>
      <table class = "table about-table">
        <tr>
          <td>Email:</td>
          <td><%= @profile.user.email %></td>
        </tr>
        <tr>
          <td>Telephone:</td>
          <td><%= @profile.telephone %></td>
        </tr>
      </table>

    </div>

    <div class = "col-md-5">
      <h3>Words to live by</h3>
      <p><%= @profile.words_to_live_by %></p>
      <h3>About me</h3>
      <p><%= @profile.about_me %></p>
    </div>
  </div>
</div>