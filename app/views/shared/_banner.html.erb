<div class="container">
  <div class="row" id="cover-photo">
    <div class="col-xs-10 username">
      <% if @user.profile_pic_id %>
        <%= image_tag( Photo.find(@user.profile_pic_id).file.url :thumb, id: "profile-pic") %>
      <% else %>
        <%= image_tag("http://placehold.it/150x150", id: "profile-pic") %>
      <% end %>
      <div id="user-name-and-link">
        <h1><%= user.full_name %></h1>
        <% if signed_in_user? %>
          <% if user.id == current_user.id %>
          <% elsif current_user.friended_user_ids.include?(user.id)%>
            <%= button_to "Unfriend", friending_path(user.id, :current_user_id => current_user.id), :method => :delete, class: "btn btn-primary" %>
          <% else %>
            <%= button_to "Friend", friendings_path(:id => user.id, :current_user_id  => current_user.id),:method => "POST", class: "btn btn-primary" %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row link-bar">
    <div class="col-sm-7 col-sm-offset-2" role="navigation">
      <ul class="nav nav-pills nav-justified">
        <li role="presentation" class="<%= params[:controller] == 'users' ? "active-tab" : "" %>"><%= link_to "Timeline", user_path(user) %></li>
        <li role="presentation" class="<%= params[:controller] == 'profiles' ? "active-tab" : "" %>"><%= link_to "About", user_profile_path(user) %></li>
        <li role="presentation" class="<%= params[:controller] == 'photos' ? "active-tab" : "" %>">
          <%= link_to user_photos_path(user.id) do %>
            Photos <span>(<%= user.photo_count %>)</span>
          <% end %>
        </li>
        <li role="presentation" class="<%= params[:controller] == 'friendings' ? "active-tab" : "" %>"><%= link_to user_friendings_path(user.id) do %>
          Friends <span>(<%= user.friended_users.count %>)</span>
        <% end %></li>
      </ul>
    </div>
    <!-- Nav Menu -->
    <% if signed_in_user? && current_user.id == user.id  %>
      <div class="col-sm-3">
        <h5 class="text-right"><%= link_to "Edit Profile", edit_profile_path(@user.profile.id), id: "edit-profile-link" %></h5>
      </div><!-- Edit Profile Link -->
    <% end %>
  </div><!-- Link bar -->
</div> <!-- Banner Container -->
