<div class="row">
  <header id="profile-header">
    <div class="cover-img">
      <img src="https://s3.amazonaws.com/viking_education/web_development/web_app_eng/hogwarts_small.jpg" alt="Cover Image" class="sr-only">
    </div>
    <h1 class="profile-username"><%= format_user_name(user) %></h1>
    <section class="profile-img">
      <img src="https://s3.amazonaws.com/viking_education/web_development/web_app_eng/harry_potter_small.jpg" alt="profile">
    </section>
    <section class="col-xs-12 profile-nav">
      <button type="button" aria-expanded="false" class="navbar-toggle">
        <span class="sr-only">"Toggle Navigation"</span>
        <span class="glyphicon glyphicon-menu-down"></span>
      </button>
      <ul class="collapse nav navbar-nav" role="menu">
        <li><%= link_to "Timeline", users_path(current_user) %></li>
        <li><%= link_to "About", user_profile_path(current_user) %></li>
        <li><a href="#">Photos</a></li>
        <li><%= link_to "Friends", user_friends_path(current_user) %></li>
        <li class="edit"><%= link_to "Edit Profile", edit_user_profile_path(current_user) %></li>
      </ul>
    </section>
  </header>
</div>
